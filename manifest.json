{
  "manifest_version": 3,
  "name": "YouTube Count-In",
  "version": "1.0.0",
  "description": "Simple count-in for YouTube made for musicians. Use Alt+C to start from current time or Alt+Shift+C to rewind to the beginning and start. Includes fully customizable BPM and beat count.",
  "permissions": ["storage", "activeTab"],
  "browser_specific_settings": {
    "gecko": {
      "id": "yt-count-in@danilo-radovic.addons",
	  "data_collection_permissions": {
		"required": ["none"]      
		}
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "commands": {
    "trigger-count-in": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Start count-in and play video"
    },
    "trigger-rewind-count-in": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Rewind to start and count-in"
    }
  }
}
